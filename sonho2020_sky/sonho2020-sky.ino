#define PWM_1 9
#define PWM_2 10
#define BT_1 2
#define BT_2 3
#define BT_3 4

int led1 = PWM_1;
int led2 = PWM_2;
int bt1 = BT_1;
int bt2 = BT_2;
int bt3 = BT_3;

void setup() {
  // declare pin 9 to be an output:
  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(bt1, INPUT);//Start Fade
  pinMode(bt2, INPUT);//Solid
  pinMode(bt3, INPUT);//??
  analogWrite(led1, 0);
  analogWrite(led2, 0);
}

void loop() {
  /////////////////////////////////////////////////////
  /////////////////////////////////////////////////////
  //bt1 aciona o fade
  /////////////////////////////////////////////////////
  /////////////////////////////////////////////////////
  if(digitalRead(bt1)==HIGH){
    for(int i=0; i<=255; i+=5){
      analogWrite(led1, i);
      analogWrite(led2, i);
    }
    /////////////////////////////////////////////////////
    /////////////////////////////////////////////////////
    //DURAÇÃO FADE ACESO
    /////////////////////////////////////////////////////
    /////////////////////////////////////////////////////
    delay(1000);
    /////////////////////////////////////////////////////
    /////////////////////////////////////////////////////
    for(int i=255; i>=0; i-=5){
      analogWrite(led1, i);
      analogWrite(led2, i);
    }
  }
  /////////////////////////////////////////////////////
  /////////////////////////////////////////////////////
  //ACESO enquanto bt2 pressionado
  /////////////////////////////////////////////////////
  /////////////////////////////////////////////////////
  while(digitalRead(bt2)==HIGH){
    analogWrite(led1, 255);
    analogWrite(led2, 255);
  }
  if(digitalRead(bt3)==HIGH){
    //??????????
  }
  analogWrite(led1, 0);
  analogWrite(led2, 0);
  delay(30);
}
